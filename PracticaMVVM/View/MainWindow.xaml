<Window x:Class="PracticaMVVM.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PracticaMVVM"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid Margin="0,0,2,-1">
        <Grid.ColumnDefinitions>
            <ColumnDefinition>
            </ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <TextBox Margin="192,36,141,357" Text="{Binding NumeroIntroducido, UpdateSourceTrigger=PropertyChanged}"/>
        <TextBlock Margin="150,88,193,305" Text="{Binding Resultado10p}"/>
        <Label Content="Introduce aqui el numero: " HorizontalAlignment="Left" Margin="37,36,0,0" VerticalAlignment="Top"/>
        <Label Content="Aplicando el 10%: " HorizontalAlignment="Left" Margin="37,88,0,0" VerticalAlignment="Top"/>
        <Label Content="Aplicando el 20%: " HorizontalAlignment="Left" Margin="37,136,0,0" VerticalAlignment="Top"/>
        <TextBlock HorizontalAlignment="Left" Margin="150,141,0,0" Text="{Binding Resultado20p}" VerticalAlignment="Top" Height="26" Width="62"/>
    </Grid>
</Window>
