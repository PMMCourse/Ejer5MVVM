<Window x:Class="Ejer5MVVM.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Ejer5MVVM"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid Background="AliceBlue">
        <Label Content="CONVERSIÓN DE TEXTO" TextBlock.FontWeight="ExtraBlack" HorizontalAlignment="Center" VerticalAlignment="Top" Height="30" Width="155" Margin="40,30,0,0" ></Label>
        <Label Content="Introduzca texto:" TextBlock.FontStyle="Oblique" HorizontalAlignment="Left" VerticalAlignment="Top" Height="30" Width="155" Margin="268,70,0,0" ></Label>
        <TextBox x:Name="txtIntroducir" HorizontalAlignment="Center" VerticalAlignment="Top" Height="75" Width="300" Margin="272,100,221.6,0" Text="{Binding InsertarTexto, UpdateSourceTrigger=PropertyChanged}" TextChanged="txtIntroducir_TextChanged" ></TextBox>
        <TextBox x:Name="txtMostrar" HorizontalAlignment="Center" VerticalAlignment="Bottom" Height="75" Width="300" Margin="272,0,221.6,151" Text="{Binding MostrarText, UpdateSourceTrigger=PropertyChanged}" TextChanged="txtMostrar_TextChanged"></TextBox>
    </Grid>
</Window>
