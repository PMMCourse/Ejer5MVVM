<Window x:Class="Ejer5MVVM.View.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Ejer5MVVM.View"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid Margin="0,0,0,0">
            <Label Content="Introduzca aqui su texto: " Margin="60,100,500,250" FontSize="20px"/>
            <Label Content="Contador:" Margin="500,100,40,250" FontSize="20px"/>
            <TextBox x:Name="tb1" Width="300" Height="100" HorizontalAlignment="Left" Margin="40,0,0,0" Text="{Binding TextoIntroducido ,UpdateSourceTrigger=PropertyChanged}"/>
            <Label Content="{Binding Contador}" Margin="500,160,150,160"/>
        </Grid>        
    </Grid>
</Window>
