<Window x:Class="Ejer5MVVM.View.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Ejer5MVVM.View"
        mc:Ignorable="d"
        Title="MainWindow" Height="200" Width="250">
    <Grid Width="250" Height="200">
        <TextBox x:Name = "txt_Texto" Text="{Binding CustomizedText}" HorizontalAlignment="Center" Margin="0,0,0,50" VerticalAlignment="Center" Width="120"/>
        <Button x:Name="btn_Boton" HorizontalAlignment="Center" VerticalAlignment="Center" Width="60"  Margin="0,0,0,0" Click="btn_Boton_Click">Enviar</Button>
    </Grid>
</Window>
